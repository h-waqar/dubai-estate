generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  posts     Post[]
  createdAt DateTime @default(now())
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  slug       String   @unique                 // human-friendly unique key for URL and lookup
  excerpt    String?                           // short summary for lists
  content    String                            // store article body (Markdown)
  coverImage String?                           // path or external URL for the banner image
  category   String?                           // flexible text category (easier than enum)
  tags       String[]  @default([])            // Postgres text[] for simple tags
  published  Boolean   @default(true)
  author     User?     @relation(fields: [authorId], references: [id])
  authorId   Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
